<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KidsLearningApp.MainPage"
             Title="KidsAppMainPage"
             NavigationPage.HasNavigationBar="False">

    <Grid RowDefinitions="1*,3*,3*,3*"
          ColumnDefinitions="5*,5*"
          RowSpacing="10"
          ColumnSpacing="10"
          Margin="20"
          
          <Label Text="Kids Learning"
                 Grid.Row="0"
                 Grid.Column="0"
                 Grid.ColumnSpan="2"
                 FontSize="Large"
                 FontAttributes="Bold"
                 HorizontalOptions="Center"
                 VerticalOptions="Center"/>
        <Border Grid.Row="1"
                Grid.Column="0"
                Padding="20"
            <VerticalStackLayout Spacing="10"
                                 VerticalOptions="Center">
            <ImageButton Source="numbers.png"
                             Aspect="AspectFit"
                             HeightRequest="150"
                             CommandParameter="Numbers"
                             Clicked="ImageButton_Clicked"/>
            <Label Text="Numbers"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>
        </Border>
    </Grid>
</ContentPage>
